<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="3"
    android:padding="4dp"
    android:background="@android:color/transparent"> <ImageButton
        android:id="@+id/floating_button_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@android:drawable/ic_menu_add"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Botón Flotante 1" />

    <ImageButton
        android:id="@+id/floating_button_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@android:drawable/ic_menu_edit"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Botón Flotante 2" />

    <ImageButton
        android:id="@+id/floating_button_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@android:drawable/ic_menu_share"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Botón Flotante 3" />

    <ImageButton
        android:id="@+id/floating_button_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@android:drawable/ic_menu_camera"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Botón Flotante 4" />

    <ImageButton
        android:id="@+id/floating_button_5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@android:drawable/ic_menu_save"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Botón Flotante 5" />

    <ImageButton
        android:id="@+id/floating_button_6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Botón Flotante 6" />
        
    <ImageButton
        android:id="@+id/floating_button_7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@android:drawable/ic_menu_agenda"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Botón Flotante 7" />

    <ImageButton
        android:id="@+id/floating_button_8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@android:drawable/ic_menu_call"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Botón Flotante 8" />

    <ImageButton
        android:id="@+id/floating_button_9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="@drawable/floating_button_background"
        android:contentDescription="Botón Flotante 9" />

</GridLayout>
